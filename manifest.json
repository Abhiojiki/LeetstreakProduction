{
    "manifest_version": 2,
    "name": "LeetCode Streak Counter",
    "version": "1.0",
    "description": "Track your LeetCode streak and daily challenges.",
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/checked.png",
        "48": "images/icon.png",
        "128": "images/unchecked.png"
      }
    },
    "icons": {
      "16": "images/checked.png",
      "48": "images/icon.png",
      "128": "images/unchecked.png"
    },
    "permissions": [
      "storage",
      "activeTab",
      "tabs"
      
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "your-extension-id@domain.com"
      }
    }
   

  }
  