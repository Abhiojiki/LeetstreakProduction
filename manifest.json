{
  "manifest_version": 3,
  "name": "LeetCode Streak Counter",
  "version": "1.0",
  "description": "Track your LeetCode streak and daily challenges.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "100": "images/icon.png"
    }
  },
  "icons": {
    "100": "images/icon.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  
  "host_permissions": [
    "*://*.leetcode.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "your-extension-id@domain.com"
    }
  }
}